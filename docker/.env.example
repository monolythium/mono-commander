# Monolythium Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# Network to join (Localnet, Sprintnet, Testnet, Mainnet)
MONOLYTHIUM_NETWORK=Sprintnet

# Chain ID (auto-detected based on network, but can be overridden)
MONOLYTHIUM_CHAIN_ID=mono-sprint-1

# Host home directory (where node data is stored on your machine)
MONOLYTHIUM_HOST_HOME=${HOME}/.monod

# Port Configuration
MONOLYTHIUM_PORT_P2P=26656
MONOLYTHIUM_PORT_RPC=26657
MONOLYTHIUM_PORT_REST=1317
MONOLYTHIUM_PORT_GRPC=9090
MONOLYTHIUM_PORT_EVM_RPC=8545
MONOLYTHIUM_PORT_EVM_WS=8546

# Docker image repository and version
MONOLYTHIUM_IMAGE=monolythium/monod
MONOLYTHIUM_VERSION=latest
